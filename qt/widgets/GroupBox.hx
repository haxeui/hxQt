package qt.widgets;

import cpp.Pointer;
import cpp.RawPointer;
import cpp.Reference;
import qt.core.QString;
import qt.widgets.Widget.QWidget;

class GroupBox extends Widget {
    public function new() {
        if (_ref == null) {
            _ref = QGroupBox.createInstance().reinterpret();
        }
        
        super();
    }
    
    //////////////////////////////////////////////////////////////////////////////////////////////////////////
    // API
    //////////////////////////////////////////////////////////////////////////////////////////////////////////
    public var title(null, set):String;
    private function set_title(value:String):String {
        groupBoxRef.ptr.setTitle(Helper.fromString(value));
        return value;
    }
    
    //////////////////////////////////////////////////////////////////////////////////////////////////////////
    // Helpers
    //////////////////////////////////////////////////////////////////////////////////////////////////////////
    public var groupBoxRef(get, null):Pointer<QGroupBox>;
    private function get_groupBoxRef():Pointer<QGroupBox> {
        return _ref.reinterpret();
    }
}

//////////////////////////////////////////////////////////////////////////////////////////////////////////
// Extern
//////////////////////////////////////////////////////////////////////////////////////////////////////////
@:unreflective
@:include('QtWidgets/QGroupBox.h')
@:native('QGroupBox')
@:structAccess
extern class QGroupBox extends QWidget {
    //////////////////////////////////////////////////////////////////////////////////////////////////////////
    // Creation functions
    //////////////////////////////////////////////////////////////////////////////////////////////////////////
    @:native("new QGroupBox")           private static function _new():RawPointer<QGroupBox>;
                                        public static inline function createInstance():Pointer<QGroupBox> {
                                            return Pointer.fromRaw(_new());
                                        }
    //////////////////////////////////////////////////////////////////////////////////////////////////////////
    // API
    //////////////////////////////////////////////////////////////////////////////////////////////////////////
    public function setTitle(value:Reference<QString>):Void;
}
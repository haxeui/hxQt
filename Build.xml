<xml>
    <echo value="Using Qt from: ${QTPATH}" />
    
    <section>
        <files id="haxe">
            <compilerflag value="-I${QTPATH}/include"/>
            <compilerflag value="-I${haxelib:hxQt}/include"/>
            <compilerflag value="-DQT_NO_KEYWORDS" />
        </files>
        <target id="haxe">
            <lib name="${QTPATH}/lib/Qt5Core.lib" />
            <lib name="${QTPATH}/lib/Qt5Widgets.lib" />
            <lib name="${QTPATH}/lib/Qt5Gui.lib" />
        </target>
    </section>        
</xml>